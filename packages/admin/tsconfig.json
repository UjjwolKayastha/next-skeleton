{
  "compilerOptions": {
    "declaration": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "removeComments": false,
    "esModuleInterop": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
