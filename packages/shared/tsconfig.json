{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "removeComments": false,
    "esModuleInterop": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
